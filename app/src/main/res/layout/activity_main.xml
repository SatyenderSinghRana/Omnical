<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context="com.calculator.omnical.MainActivity"
    tools:ignore="ExtraText">

    //Top area

    <TextView
        android:id="@+id/calculated_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:background="@drawable/button_state"
        android:gravity="start"
        android:hint="@string/result_hint"
        android:maxLength="60"
        android:maxLines="4"
        android:paddingStart="@dimen/textview_padding_medium"
        android:paddingTop="@dimen/textview_padding_large"
        android:paddingEnd="@dimen/textview_padding_small"
        android:paddingBottom="@dimen/textview_padding_medium"
        android:textColor="@color/text_result_color"
        android:textColorHint="@color/text_result_color"
        android:textIsSelectable="true"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_expression"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:hint="@string/expression_hint"
        android:maxLength="50"
        android:maxLines="1"
        android:paddingStart="@dimen/textview_padding_medium"
        android:paddingTop="@dimen/textview_padding_medium"
        android:paddingEnd="@dimen/textview_padding_medium"
        android:paddingBottom="@dimen/textview_padding_medium"
        android:scrollHorizontally="true"
        android:textColor="@color/text_result_color"
        android:textColorHint="@color/text_result_color"
        android:textIsSelectable="true"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintEnd_toStartOf="@+id/btn_del"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculated_answer" />

    <ImageView
        android:id="@+id/btn_del"
        android:layout_width="@dimen/backspace_imageview"
        android:layout_height="@dimen/backspace_imageview"
        android:layout_margin="@dimen/textview_padding_small"
        android:contentDescription="@string/delete"
        android:padding="@dimen/layout_padding_medium"
        android:src="@drawable/backspace"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculated_answer" />
    //Buttons

    <!-- Row 0 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_clear"
            style="@style/myGridButtonStyleOperator"
            android:background="@drawable/button_state"
            android:text="@string/button_clear" />

        <Button
            android:id="@+id/btn_left_bracket"
            style="@style/myGridButtonStyleOperator"
            android:background="@drawable/button_state"
            android:text="@string/button_left_bracket" />

        <Button
            android:id="@+id/btn_right_bracket"
            style="@style/myGridButtonStyleOperator"
            android:background="@drawable/button_state"
            android:text="@string/button_right_bracket" />

        <Button
            android:id="@+id/btn_divide"
            style="@style/myGridButtonStyleOperator"
            android:background="@drawable/button_state"
            android:text="@string/button_divide" />
    </LinearLayout>

    <!-- Row 1 -->
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_7"
            style="@style/myGridButtonStyleNumber"
            android:background="@drawable/button_state"
            android:text="@string/button_seven" />

        <Button
            android:id="@+id/btn_8"
            style="@style/myGridButtonStyleNumber"
            android:background="@drawable/button_state"
            android:text="@string/button_eight" />

        <Button
            android:id="@+id/btn_9"
            style="@style/myGridButtonStyleNumber"
            android:background="@drawable/button_state"
            android:text="@string/button_nine" />

        <Button
            android:id="@+id/btn_multiply"
            style="@style/myGridButtonStyleOperator"
            android:background="@drawable/button_state"
            android:text="@string/button_multiply" />
    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_4"
            style="@style/myGridButtonStyleNumber"
            android:background="@drawable/button_state"
            android:text="@string/button_four" />

        <Button
            android:id="@+id/btn_5"
            style="@style/myGridButtonStyleNumber"
            android:background="@drawable/button_state"
            android:text="@string/button_five" />

        <Button
            android:id="@+id/btn_6"
            style="@style/myGridButtonStyleNumber"
            android:background="@drawable/button_state"
            android:text="@string/button_six" />

        <Button
            android:id="@+id/btn_minus"
            style="@style/myGridButtonStyleOperator"
            android:background="@drawable/button_state"
            android:text="@string/button_minus" />
    </LinearLayout>

    <!-- Row 3 -->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_1"
            style="@style/myGridButtonStyleNumber"
            android:background="@drawable/button_state"
            android:text="@string/button_one" />

        <Button
            android:id="@+id/btn_2"
            style="@style/myGridButtonStyleNumber"
            android:background="@drawable/button_state"
            android:text="@string/button_two" />

        <Button
            android:id="@+id/btn_3"
            style="@style/myGridButtonStyleNumber"
            android:background="@drawable/button_state"
            android:text="@string/button_three" />

        <Button
            android:id="@+id/btn_plus"
            style="@style/myGridButtonStyleOperator"
            android:background="@drawable/button_state"
            android:text="@string/button_plus" />
    </LinearLayout>

    <!-- Row 4 -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_00"
            style="@style/myGridButtonStyleNumber"
            android:background="@drawable/button_state"
            android:text="@string/button_double_zero" />

        <Button
            android:id="@+id/btn_0"
            style="@style/myGridButtonStyleNumber"
            android:background="@drawable/button_state"
            android:text="@string/button_zero" />

        <Button
            android:id="@+id/btn_dot"
            style="@style/myGridButtonStyleNumber"
            android:background="@drawable/button_state"
            android:text="@string/button_decimal"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_equal"
            style="@style/myGridButtonStyleEqualTo"
            android:background="@drawable/button_state"
            android:text="@string/button_equal_to" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
